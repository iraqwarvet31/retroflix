<div class="container">
  <div class="row vertical-center">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center"><i class="fas fa-user-alt"></i> Login</h1>
        <%- include("./partials/messages.ejs") %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <div class="login">
              <i class="fas fa-envelope fa-2x" style="color:#929292"></i>
              <label for="name"></label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Enter Email"
                value="<%= typeof email !== 'undefined' ? email : '' %>"
              />
            </div>
          </div>
          <div class="form-group">
            <div class="login">
              <i class="fas fa-lock fa-2x" style="color:#929292"></i>
              <label for="email"></label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Enter password"
                value="<%= typeof password !== 'undefined' ? password : '' %>"
              />
            </div>
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Login
          </button>
          <p class="mt-3">No Account? <a href="register">Register</a></p>
        </form>
      </div>
    </div>
  </div>
</div>
